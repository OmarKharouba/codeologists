	</section>

	<div class="modal is-active" v-show="showLogin">
  		<div class="modal-background" @click="showLogin=false"></div>
  		<div class="modal-content">
    		<router-view name="loginModal"></router-view>
  		</div>
  		<button class="modal-close" @click="showLogin=false"></button>
	</div>

