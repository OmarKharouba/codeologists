					</div>
					<span class="nav-toggle">
          <span></span>
					<span></span>
					<span></span>
					</span>
					<div class="nav-right nav-menu">

						<router-link class="nav-item is-active" tag="li" to="/" exact><a>Home</a></router-link>

						<router-link class="nav-item" to="/myArenas" v-show="type=='ServiceProvider'"><a>My Arenas</a></router-link>

						<router-link class="nav-item" to="/myrequests"><a>My requests</a></router-link>
