						 -->



								<a class="nav-item" v-show="user" @click="logout">Logout</a>
						
						<router-link class="nav-item" to="/login-signup/login" v-show="!user">
            				<a class="button is-info is-inverted" @click="showLogin=true">
              					<span class="icon">
                					<i class="fa fa-github"></i>
              					</span>
							<span >Login or Signup</span>
						</a>
						</router-link>
					</div>
				</div>
			</header>
		</div>

		<!-- Hero content: will be in the middle -->
